<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".signInFragment">



    <EditText
        android:id="@+id/email_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:background="@color/off_white"
        android:ems="10"
        android:hint="Email/Phone No."
        android:textColor="@color/fresco_blue"
        android:inputType="text"
        android:paddingVertical="@dimen/generalSpace"
        android:paddingLeft="@dimen/generalSpace"
        android:textColorHint="@color/light_grey"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:background="@color/off_white"
        android:ems="10"
        android:hint="Password"
        android:textColor="@color/fresco_blue"
        android:inputType="textPassword"
        android:paddingVertical="@dimen/generalSpace"
        android:paddingLeft="@dimen/generalSpace"
        android:textColorHint="@color/light_grey"
        app:layout_constraintTop_toBottomOf="@+id/email_phone"
        android:layout_marginTop="@dimen/generalSpace"/>

    <Button
        android:id="@+id/signInButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/generalSpace"
        app:backgroundTint="@color/fresco_blue"
        android:text="@string/signIn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/password" />

</androidx.constraintlayout.widget.ConstraintLayout>